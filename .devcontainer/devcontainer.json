{
	"name": "Vatican Development Environment",
	"image": "mcr.microsoft.com/devcontainers/dotnet:10.0-preview",
	"forwardPorts": [
		5000
	],
	"postCreateCommand": "dotnet restore",
	"customizations": {
		"vscode": {
			"extensions": [
				"dbaeumer.vscode-eslint",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"humao.rest-client",
				"ms-dotnettools.csharp",
				"ms-dotnettools.csdevkit"
			]
		}
	},
	"remoteUser": "root"
}
